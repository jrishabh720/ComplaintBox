<% include partial/header %>
<div class="container">
  <div class="container">
  <div class="container">
<%topx.forEach(function(topC){ %>
      <div class="card flex-md-row mb-4 box-shadow h-md-250">
      <img class="card-img-left flex-auto d-none d-md-block" width="260px" height="140px" src="<%=topC.image%>">
      <div class="card-body d-flex flex-column align-items-start" style="background-color:#efb6b6">
      <a href='/detail/<%=topC.id%>'>
      <h3 style="color:red"><%= topC.title%></h3>
      </a>
      <%= topC.desc.substring(0,150)%>
      </div>
      </div>
    <% }) %>
</div>
</div>
</div>
<% include partial/footer %>
