<% include partial/header %>
<div class="container">
<div class="container">
<div class="container">
<%topC.forEach(function(topC){ %>
      <div class="card flex-md-row mb-4 box-shadow h-md-250">
      <img class="card-img-left flex-auto d-none d-md-block" width="250px" height="130px" src="<%=topC.image%>">
      <div class="card-body d-flex flex-column align-items-start" 

      <% if(topC.status == 0){%>
      style="background-color:#efb6b6"
      <%}else{%>
      style="background-color:#b6edbc"
      <%}%>

      >
      <a href='/detail/<%=topC.id%>'>
      <% if(topC.status == 0){%>
      <h3 style="color:red"><%=topC.title%></h3>
      <%}else{%>
      <h3 style="color:green"><%=topC.title%></h3>
      <%}%>
      </a>
      <%= topC.desc.substring(0,150)%>...
      </div>
      </div>
    <% }) %>
</div>
</div>
</div>
<% include partial/footer %>
